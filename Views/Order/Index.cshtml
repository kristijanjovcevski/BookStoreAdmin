@{
}

@model List<BookStoreAdminApplication.Models.Order>

<div class="container">
    <div class="row">
        <a asp-action="ExportOrders" class="btn btn-danger">Export All Orders</a>

    </div>

    <div class="row m-4">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Customer name</th>
                    <th scope="col">Number of orders</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="5">No active orders</td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];

                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>@item.Owner.UserName</td>
                            <td>@item.BooksInOrder.Count</td>
                            <td><a asp-action="Details" asp-route-Id="@item.Id" class="btn btn-info">Details</a></td>
                            <td><a asp-action="CreateInvoice" asp-route-Id="@item.Id" class="btn btn-success">Create Invoice</a></td>
                        </tr>

                    }
                }
            </tbody>

        </table>
    </div>

</div>